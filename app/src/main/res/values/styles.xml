<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorAccent">#3E5B72</item>

        <!--change color of subheadings-->
        <item name="android:textColorSecondary">#000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">12sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">40dp</item><!-- item size in menu-->
        <item name="listPreferredItemHeightSmall">40dp</item><!-- item size in menu-->
    </style>

    <style name="Department">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Department_Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_span">2</item>
        <item name="android:layout_column">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">25sp</item>
        <!--<item name="fontPath">fonts/ParagonCleanersMedium-Condensed.ttf</item>-->
    </style>

    <style name="CG_Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="CG_Holder">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CG_Name">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <!--<item name="fontPath">fonts/ProximaNova-Bold.otf</item>-->
    </style>

    <style name="CG_Contact">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:onClick">call</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="CG_Mail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:onClick">mail</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <!--<item name="fontPath">fonts/ProximaNova-Condensed.otf</item>-->
    </style>

    <style name="Dev_Contact">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#deb951</item>
        <item name="android:textSize">15sp</item>
        <item name="android:onClick">callDev</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Dev_Mail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#deb951</item>
        <item name="android:textSize">15sp</item>
        <item name="android:onClick">mailDev</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <!--<item name="fontPath">fonts/ProximaNova-Condensed.otf</item>-->
    </style>

    <style name="Question">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#4fa5d5</item>
        <item name="android:textSize">20sp</item>
        <!--<item name="fontPath">fonts/ProximaNova-Bold.otf</item>-->
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="Answer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
</resources>
