<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#222933"
    android:layout_marginBottom="30dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="Notification Title"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="#223D42"
        android:paddingRight="8dp"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id"
        android:layout_toEndOf="@+id/noti_image"
        android:paddingBottom="10dp"
        android:paddingTop="0dp"
        android:text="notification text"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="#ffffff"
        android:paddingRight="8dp"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/noti_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/id"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/id"
        android:layout_toStartOf="@+id/id"
        app:srcCompat="@drawable/ic_action_check" />
</RelativeLayout>
