<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#31313B">

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:background="#31313B"
        tools:listitem="@layout/notifiation_item" />

    <!--<ImageView-->
    <!--android:id="@+id/notificationimg"-->
    <!--android:layout_width="100dp"-->
    <!--android:layout_height="100dp"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_marginTop="27dp"-->
    <!--android:src="@drawable/unnamed" />-->
    <android.support.v7.widget.CardView
        android:id="@+id/view2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:elevation="12dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/notificationimg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/emailUserDisplay"
            android:src="@drawable/unnamed">

        </ImageView>

    </android.support.v7.widget.CardView>
    <ImageView
        android:id="@+id/logout_noti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/list"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logout" />

    <TextView
        android:id="@+id/email_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:textColor="#fff"
        android:textSize="20sp" />
</RelativeLayout>

