<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#212A33"
    android:layout_height="match_parent"
    tools:context="com.example.nautatvanavlakha.abcd.ProfileUser">

    <EditText
        android:id="@+id/username_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="194dp"
        android:layout_toEndOf="@+id/username_text"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Username" />

    <EditText
        android:id="@+id/phone_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/username_edit"
        android:layout_below="@+id/username_edit"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Phone No." />

    <TextView
        android:id="@+id/username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/username_edit"
        android:layout_alignBottom="@+id/username_edit"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:text="Username"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/phone_edit"
        android:layout_alignBottom="@+id/phone_edit"
        android:layout_alignStart="@+id/username_text"
        android:text="PhoneNo."
        android:textSize="25sp" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/phone_edit"
        android:layout_below="@+id/phone_edit"
        android:layout_marginTop="52dp"
        android:text="Save" />
</RelativeLayout>
